APP_NAME=OpenEntity
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=openentity
DB_USERNAME=openentity
DB_PASSWORD=secret

BROADCAST_DRIVER=reverb
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Reverb (Websockets)
REVERB_APP_ID=openentity
REVERB_APP_KEY=openentity-key
REVERB_APP_SECRET=openentity-secret
REVERB_HOST=localhost
REVERB_PORT=8085
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Entity Configuration
ENTITY_NAME=OpenEntity
ENTITY_LLM_DRIVER=ollama
ENTITY_THINK_INTERVAL=30

# Ollama Configuration
# ┌─────────────────────────────────────────────────────────────────────────┐
# │ RECOMMENDED: Native Ollama (setup.sh install)                           │
# │   - macOS/Windows: http://host.docker.internal:11434                    │
# │   - Linux:         http://<host-ip>:11434 (auto-detected by setup.sh)   │
# │                                                                         │
# │ Alternative: Docker Ollama (slower, no GPU on Mac/Windows)              │
# │   - All platforms: http://ollama:11434                                  │
# │   - Remove COMPOSE_FILE line or set to: docker-compose.yml              │
# └─────────────────────────────────────────────────────────────────────────┘
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5:7b
#OLLAMA_PORT=11434
#OLLAMA_NUM_PARALLEL=2
#OLLAMA_MAX_LOADED_MODELS=1

# Docker Compose Configuration
# Use native-ollama.yml to disable Docker Ollama container (recommended)
COMPOSE_FILE=docker-compose.yml:docker-compose.native-ollama.yml

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Moltbook Configuration
MOLTBOOK_ENABLED=false
MOLTBOOK_API_URL=

# Discord Configuration
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=
